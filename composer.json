{
    "name": "pineblade/pineblade",
    "description": "Blade for frontend",
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Pineblade\\Pineblade\\": "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "ErickJMenezes",
            "email": "erickmenezes.dev@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2",
        "nikic/php-parser": "^4.15",
        "symfony/process": "^6.3",
        "laravel/framework": "^10.13"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pineblade\\Pineblade\\PinebladeServiceProvider"
            ]
        }
    },
    "require-dev": {
        "pestphp/pest": "^2.8",
        "orchestra/testbench-dusk": "^8.6",
        "pestphp/pest-plugin-laravel": "^2.0",
        "vimeo/psalm": "^5.13",
        "psalm/plugin-laravel": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/testbench package:test"
        ],
        "pineblade:publish": [
            "@php artisan vendor:publish --tag pineblade-scripts --force --ansi"
        ],
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@dusk:install-chromedriver"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "dusk:install-chromedriver": "@php vendor/bin/dusk-updater detect --auto-update --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
